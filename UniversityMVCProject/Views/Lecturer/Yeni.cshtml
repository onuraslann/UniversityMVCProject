@model UniversityMVCProject.ViewModel.LecturerViewModels
@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Kaydet", "Lecturer", FormMethod.Post)) { 

<div class="form-group">
    @Html.LabelFor(m=>m.Lecturers.FirstName)
    @Html.TextBoxFor(m=>m.Lecturers.FirstName)
    @Html.ValidationMessageFor(m=>m.Lecturers.FirstName)

</div>
<div class="form-group">
    @Html.LabelFor(m => m.Lecturers.LastName)
    @Html.TextBoxFor(m => m.Lecturers.LastName)
    @Html.ValidationMessageFor(m => m.Lecturers.LastName)

</div>

<div class="form-group">
    @Html.LabelFor(m => m.Lecturers.Email)
    @Html.TextBoxFor(m => m.Lecturers.Email)
    @Html.ValidationMessageFor(m => m.Lecturers.Email)

</div>
<div class="form-group">
    @Html.LabelFor(m => m.Lecturers.Age)
    @Html.TextBoxFor(m => m.Lecturers.Age)
    @Html.ValidationMessageFor(m => m.Lecturers.Age)

</div>
<div class="form-group">
    @Html.LabelFor(m => m.Lecturers.DepartmanId)
    @Html.DropDownListFor(m => m.Lecturers.DepartmanId, new SelectList(Model.Departmans, "Id", "DepartmanName"))
    @Html.ValidationMessageFor(m => m.Lecturers.DepartmanId)

</div>
@Html.HiddenFor(m=>m.Lecturers.Id)
<button type="submit" class="btn btn-success">Add</button>
}

