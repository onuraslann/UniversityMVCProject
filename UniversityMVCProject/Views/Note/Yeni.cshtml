@model UniversityMVCProject.ViewModel.NoteViewModels
@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Kaydet", "Note", FormMethod.Post))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Notes.LessonId)
        @Html.DropDownListFor(m => m.Notes.LessonId, new SelectList(Model.Lessons, "Id", "LessonName"))

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Notes.StudentId)

        @Html.DropDownListFor(m => m.Notes.StudentId, new SelectList(Model.Students, "Id", "FirstName"))
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Notes.Vize)
        @Html.TextBoxFor(m => m.Notes.Vize)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Notes.Final)
        @Html.TextBoxFor(m => m.Notes.Final)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Notes.Average)
        @Html.TextBoxFor(m => m.Notes.Average)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Notes.Status)
        @Html.TextBoxFor(m => m.Notes.Status)

    </div>
    <button type="submit" class="btn btn-success">Add</button>
}



